---
const { branchName } = Astro.props;
---

<main>
    <nav>
        <span><a href="/">Back to directory</a></span>
    </nav>

    <header>
        <div>
            <img src="/assets/logo.png" alt="Intersect logo">
            <h1>Intersect Engine <a href="https://github.com/AscensionGameDev/Intersect-Engine/tree/main">{branchName}</a> Branch Demo</h1>
        </div>
    </header>

    <article>
        <section>
        </section>
    </article>
</main>

<style>

    article {
        padding-top: 2em;
        line-height: 1.5;
    }
    section {
        margin-top: 2em;
        display: flex;
        flex-direction: column;
        gap: 1em;
        max-width: 70ch;
    }

    .banner {
        text-align: center;
        font-size: 1.2rem;
        background: var(--color-light);
        padding: 1em 1.5em;
        padding-left: 0.75em;
        border-radius: 4px;
    }

    pre,
    code {
        font-family: var(--font-mono);
        background: var(--color-light);
        border-radius: 4px;
    }

    pre {
        padding: 1em 1.5em;
    }

    .tree {
        line-height: 1.2;
    }

    code:not(.tree) {
        padding: 0.125em;
        margin: 0 -0.125em;
    }
</style>
