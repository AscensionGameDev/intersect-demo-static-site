---
const { branches = [], current = 'Home' } = Astro.props;
---

<div class="dropdown-container">
    <span class="dropdown-trigger">{current}</span>
    <ul class="dropdown">
        {branches.map(({ name }) => (
            <li><a href={`/${name}`}>{name}</a></li>
        ))}
    </ul>
</div>

<style>
    .dropdown-container {
        position: relative;
        flex: 1;
    }

    ul.dropdown {
        list-style: none;
        line-height: initial;
        padding-inline-start: 0;
        visibility: hidden;
        background-color: #1A1A1A;
    }

    .dropdown-trigger:hover + ul.dropdown,
    .dropdown-container:hover > ul.dropdown,
    ul.dropdown:hover {
        visibility: initial;
    }

    ul > li > a {
        display: flex;
        padding: calc(max(10px, 1vmin));
    }

    .dropdown-trigger {
        padding: calc(max(10px, 1vmin)) calc(max(30px, 3vmin));
        pointer-events: none;
    }

    .banner {
        text-align: center;
        font-size: 1.2rem;
        background: var(--color-light);
        padding: 1em 1.5em;
        padding-left: 0.75em;
        border-radius: 4px;
    }

    pre,
    code {
        font-family: var(--font-mono);
        background: var(--color-light);
        border-radius: 4px;
    }

    pre {
        padding: 1em 1.5em;
    }

    .tree {
        line-height: 1.2;
    }

    code:not(.tree) {
        padding: 0.125em;
        margin: 0 -0.125em;
    }
</style>
